menu "Input"

config CONTROLLER_INPUT_GB
	bool "GB joypad"
	default y
	help
		Enable GB joypad

config CONTROLLER_INPUT_NES
	bool "NES standard controller"
	default y
	help
		Enable NES standard controller for players 1 and 2

config CONTROLLER_INPUT_SMS
	bool "SMS controller"
	default y
	help
		Enable SMS peripheral support

config CONTROLLER_INPUT_PSX
	bool "PSX controller and memory card"
	default y
	help
		Enable PSX controller and memory card I/O

endmenu

